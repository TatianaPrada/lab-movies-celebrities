<h2>Create a new Celebrity</h2>

<form action="/celebrities/create" method="POST">
    <label>Name:</label>
    <input type="text" name="name" />

    <label>Occupation:</label>
    <input type="text" name="occupation" />

    <label>Catch Phrase:</label>
    <input type="text" name="catchPhrase" />

    <button type="submit">Create Celebrity</button>
</form>

{{#if errMsg}}
  <h2>{{errMsg}}</h2>
{{/if}}