<h2>Movie Details</h2>

<h3>{{this.title}}</h3>
<h5>{{genre}}</h5>
<p>{{plot}}</p>

<h6>Cast:</h6>
    {{#each cast}}
    <ul>
    <li>{{this.name}}</li>
    <li>{{this.occupation}}</li>
    <li>{{this.catchPhrase}}</li>
    </ul>
    {{/each}}
<form action="/movies/{{this._id}}/delete" method="POST">
    
    <button type="submit">Delete</button>

      {{#if errMsg}}
  <h2>{{errMsg}}</h2>
    {{/if}}


</form>
